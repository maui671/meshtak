[Unit]
Description=TAK <-> Meshtastic Bridge
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/meshtak
ExecStart=/opt/meshtak/venv/bin/python /opt/meshtak/meshtak.py
Restart=always
RestartSec=5
User=root

[Install]
WantedBy=multi-user.target
